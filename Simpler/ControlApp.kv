<UpdateLeds>:

    canvas:
        Color:

            rgba: .75, .75, .75, 1

        Rectangle:
            size: root.size
            pos: 0, 0


    Led:
        id: led1
        pos_hint_x: None
        pos_hint_y: None
        size_hint: None, None
        pos: root.width/6-self.width/2, root.height/2-self.height/2

    Led:
        id: led2
        pos_hint_x: None
        pos_hint_y: None
        size_hint: None, None
        pos: root.width/2-self.width/2, root.height/2-self.height/2

    Led:
        id: led3
        pos_hint_x: None
        pos_hint_y: None
        size_hint: None, None
        pos: root.width*5/6-self.width/2, root.height/2-self.height/2

    Button:
        text: "Start"
        pos_hint_x: None
        pos_hint_y: None
        size_hint: None, None
        pos: root.width/3-self.width/2, root.height/9
        on_press: root.schedule()



<Led@Widget>:
    size: 50, 50

    basecolor: [0, 0, 0, 1]

    canvas:
        Color:

            rgba: self.basecolor

        RoundedRectangle:

            size: self.size
            radius: [self.width/2]
            pos: self.pos

